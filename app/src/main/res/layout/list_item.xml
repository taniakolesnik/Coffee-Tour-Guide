<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/list_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:orientation="vertical"
        tools:context="com.example.android.tourguide.MainActivity">

        <TextView
            android:id="@+id/name_list_item"
            style="@style/ListNameStyle"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/ListAddressStyle"
            android:id="@+id/address_list_item"
            android:minHeight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phone_list_item"
            style="@style/ListOpenHoursStyle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/map_list_item"
        android:layout_toStartOf="@+id/map_list_item"
        android:paddingRight="@dimen/padding_standard"
        android:src="@drawable/if_almaz" />

    <ImageView
        android:id="@+id/map_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_maps"
        android:paddingRight="@dimen/padding_standard"
        android:paddingEnd="@dimen/padding_standard"/>

</RelativeLayout>
